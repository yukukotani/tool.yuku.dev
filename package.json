{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot server.ts",
    "dev:browser": "esbuild app/assets/*.{ts,tsx} --outbase=app/assets --outdir=dist/assets --bundle --minify --splitting --format=esm --entry-names='[dir]/[name]' --chunk-names='chunks/[name]-[hash]' --sourcemap --watch",
    "build": "esbuild app/assets/*.{ts,tsx} --outbase=app/assets --outdir=dist/assets --bundle --minify --splitting --format=esm --entry-names='[dir]/[name]' --chunk-names='chunks/[name]-[hash]'",
    "start": "bun server.ts"
  },
  "dependencies": {
    "@remix-run/dom": "^0.0.0-experimental-remix-jam.1",
    "@remix-run/events": "^0.0.0-experimental-remix-jam.1",
    "@remix-run/fetch-router": "^0.14.0",
    "@remix-run/lazy-file": "^4.2.0",
    "@remix-run/node-fetch-server": "^0.13.0",
    "hono": "^4.11.4",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0"
  }
}
